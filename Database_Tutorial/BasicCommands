<!-- 1} Basic commands : -->
<!--   
      a} CREATE :  -->
 
<!-- i} show database :                   (check what are the databases are already present)  -->
            SHOW DATABASES; 

<!-- ii} create database :            (first we must create the database next continue the process) -->
           CREATE DATABASE user;

<!-- iii} use database :          (enter the database) -->
           USE user;

<!-- iv} create table : -->

CREATE TABLE user (
    user_id INT,
    user_name VARCHAR(100),
    email VARCHAR(100),
    password VARCHAR(100),
    created_at TIMESTAMP
);


<!-- v} show tables:     (show all tables) -->
           SHOW TABLES;

<!-- vi} describe the table :  (display what are all the columns present in the table ) -->
            DESCRIBE user;



<!-- b} INSERT -->

<!-- i} Insert Rows -->
        INSERT INTO user(user_id,user_name,email,password,created_at)
                    values(11,'om','om@gmail.com',123456, '2025-12-15'),
                          (12,'arya','a@gmail.com',87776555,'2025-12-14'),
                          (13,'arjun','arjun@gmail.com',8765678,'2025-12-13'),
                          (14,'deepu','deepu@gmail.com',876656,'2025-12-12');


<!-- ii} view all data : -->
     SELECT * FROM user;

<!-- iii} view specific column : -->
     SELECT user_name ,email FROM user;


<!-- c} UPDATE :

i} Update the data: -->
    UPDATE user
    SET password=455455
    WHERE user_name='deepu';


<!-- d} DELETE

i} Delete specific Row : -->
      DELETE FROM user
      WHERE user_name='om';


<!-- ii} Delete all Rows : -->
      DELETE FROM user;


<!-- e} DROP :

i} Drop table : -->
      DROP TABLE user;

<!-- ii} Drop Database : -->
      DROP DATABASE user;


